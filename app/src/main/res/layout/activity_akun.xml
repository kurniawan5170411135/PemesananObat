<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.PemesananObat.Akun">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="AKUN"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/anamma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/apasss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anamma"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/updatee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="Update" />

    <Button
        android:id="@+id/bttkembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatee"
        android:background="#FFFFFF"
        android:text="Kembali" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="335dp"
        android:text="Usename"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:text="Password"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:ems="0"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="2sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/akunnnn" />
</RelativeLayout>
